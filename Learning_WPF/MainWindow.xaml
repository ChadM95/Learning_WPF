<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton Content="Bigger" Name="rbBig" GroupName="Size"/>
        <RadioButton Content="Smaller" Name="rbSmall" GroupName="Size" HorizontalAlignment="Center"/>
        <Button Name="btn1" Content="Button" Click="btn1_Click" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Width="80" Height="40"/>
    </Grid>
    
</Window>
