<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Button 1"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Button 2"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Button 3"/>

        <Button Grid.Column="0" Grid.Row="1" Content="Button 4"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Button 5"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Button 6"/>

        <Button Grid.Column="0" Grid.Row="2" Content="Button 7"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Button 8"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Button 9"/>
        
    </Grid>
</Window>
